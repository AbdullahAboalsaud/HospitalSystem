<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainUi.Splash">


    <ImageView
        android:id="@+id/shadow_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintHeight_percent="0.35"
        android:scaleType="fitXY"
        android:src="@drawable/shape1"
        android:alpha="0.20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:id="@+id/shadow_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintHeight_percent="0.35"
        android:scaleType="fitXY"
        android:src="@drawable/shape2"
        android:alpha="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.40"
        app:layout_constraintHeight_percent="0.26"
        android:src="@drawable/app_logo"
        app:layout_constraintTop_toTopOf="@id/shadow_up"
        app:layout_constraintBottom_toBottomOf="@id/shadow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>